<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <script src="https://cdn.tailwindcss.com"></script>
        <link rel="stylesheet" href="{{ asset('assets/choices.min.css') }}" />
        <link type="text/css" rel="stylesheet" href="{{ asset('assets/style.css') }}">
        <script src="{{ asset('assets/choices.min.js') }}" defer></script>
        <script src="{{ asset('assets/script.js') }}" defer></script>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% if errorPage is not defined %}
            {% include 'partials/header.html.twig' %}
        {% endif %}
        
        {% block body %}{% endblock %}
    </body>
</html>

