<header>
    <nav class="bg-slate-800 border-gray-200">
        <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
            <a href="https://flowbite.com/" class="flex items-center">
                <img src="https://symfony.com/logos/symfony_white_02.png" class="h-8 mr-3" alt="Symfony Logo" />
            </a>
            <button data-collapse-toggle="navbar-default" type="button" class="inline-flex items-center p-2 ml-3 text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200" aria-controls="navbar-default" aria-expanded="false">
                <span class="sr-only">Ouvrir le menu</span>
                <svg class="w-8 h-8" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                </svg>
            </button>
            {% if navbar is defined %}
                <div class="hidden w-full md:block md:w-auto" id="navbar-default">
                    <ul class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg md:flex-row md:space-x-8 md:mt-0 md:border-0">
                    
                        {% for item in navbar %}

                            <li>
                                {% if app.request.attributes.get('_route') == item.path %}
        
                                    <a class="cursor-not-allowed block py-2 pl-3 pr-4 text-white bg-blue-400 rounded md:bg-transparent md:text-blue-400 md:p-0" aria-current="page">{{ item.label }}</a>
                                    
                                {% else %}    

                                    <a href="{{ item.url }}" class="block py-2 pl-3 pr-4 text-gray-200 rounded hover:bg-blue-400 md:hover:bg-transparent md:border-0 md:hover:text-blue-400 md:p-0">{{ item.label }}</a>
                                    
                                {% endif %}
                            </li>

                        {% endfor %}

                    </ul>
                </div>
            {% endif %}
            <div class="block w-auto">
                <ul class="font-medium flex flex-col p-4 md:p-0 gap-2 rounded-lg md:flex-row md:space-x-8 md:mt-0">
                    
                    {% if app.user %}

                        <li>              
                            {% if app.request.attributes.get('_route') == "logout_user" %} 

                                <a class="cursor-not-allowed block rounded bg-red-800 text-white p-2" aria-current="page">Se déconnecter</a>

                            {% else %}    
                                
                                <a href="/logout" class="block text-gray-200 rounded bg-red-600 hover:bg-red-800 hover:text-white p-2">Se déconnecter</a>

                            {% endif %}
                        </li>
            
                    {% else %}

                        <li>    
                            {% if app.request.attributes.get('_route') == "login_user" %} 

                                <a class="cursor-not-allowed block rounded bg-green-700 text-white p-2" aria-current="page">Connexion</a>

                            {% else %}    
                                
                                <a href="/login" class="block text-gray-200 rounded bg-green-400 hover:bg-green-700 hover:text-white p-2">Connexion</a>

                            {% endif %}
                            
                        </li>
                        <li>    
                            {% if app.request.attributes.get('_route') == "register_user" %} 

                                <a class="cursor-not-allowed block rounded bg-green-700 text-white p-2" aria-current="page">Inscription</a>

                            {% else %}    
                                
                                <a href="/register" class="block text-gray-200 rounded bg-green-400 hover:bg-green-700 hover:text-white p-2">Inscription</a>

                            {% endif %}
                            
                        </li>

                    {% endif %}

                </ul>
            </div>
        </div>
    </nav>
</header>
