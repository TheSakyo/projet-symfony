{% extends 'base.html.twig' %}

{% block title %}Vos Articles{% endblock %}

{% block body %}

<div class="flex justify-center w-full">
    <div class="w-11/12 my-12">
        {% if error is not null %}
            <div class="flex flex-col items-center bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                <strong class="font-bold">Vous n'êtes pas connecté !</strong>
                <span class="block sm:inline">{{ error }}</span>
            </div>
        {% else %}
            <h1 class="flex items-center text-5xl font-extrabold underline">Vos Articles :</h1>

            <div class="flex justify-center items-center gap-12 w-full my-12 text-center">
                <a href="/article">
                    <button type="button" class="focus:outline-none text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2">Retour à tous les articles</button>
                </a>
                <a href="add">
                    <button type="button" class="focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2">Ajouter un article</button>
                </a>
            </div>

            {% if articles is empty %}
                <div class="flex flex-col items-center bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 my-8 rounded relative" role="alert">
                    <strong class="font-bold">Aucun Articles !</strong>
                    <span class="block sm:inline">Vous possédez aucun articles..</span>
                </div>
            {% endif %}


            {{ include('entities/article/includes/list.html.twig') }}

        {% endif %}
    </div>
</div>
{% endblock %}
