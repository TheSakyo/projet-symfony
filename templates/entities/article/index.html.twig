{% extends 'base.html.twig' %}

{% block title %}Tous les Articles{% endblock %}

{% block body %}


<div class="flex justify-center w-full">
    <div class="w-11/12 my-12">
        <div class="flex justify-between items-center w-full">
            <h1 class="w-fit text-5xl font-extrabold underline">Articles :</h1>

            <div>
                {{ form_start(form) }}

                    {{ form_widget(form.query, {'attr': {'id' : 'search', 'class': 'w-fit px-4 text-sm h-14 w-96 pr-8 pl-5 rounded border border-blue-800 z-0 focus:shadow focus:outline-none', 'placeholder': 'Recherchez un article...' }}) }}

                {{ form_end(form) }}
            </div>
        </div>
        {% if articles is empty %}
            <div class="flex flex-col items-center bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 my-8 rounded relative" role="alert">
                <strong class="font-bold">Aucun Articles !</strong>
                <span class="block sm:inline">Aucun article(s) a été trouvé(s)...</span>
            </div>
        {% endif %}
        
        <div class="flex justify-end items-center my-12 w-full">
            <a href="yourArticles">
                <button type="button" class="focus:outline-none text-white bg-sky-600 hover:bg-sky-500 focus:ring-4 focus:ring-sky-300 font-medium rounded-lg text-sm p-2 mr-2 mb-2 uppercase">Vos Articles</button>
            </a>
        </div>

        {{ include('entities/article/includes/list.html.twig') }}
        
    </div>
</div>
{% endblock %}